//  ====================
//  = Column structure =
//  ====================

// default page wrapper
.wrapper {
	margin: 0 auto;
	padding: 0 $site-padding;
	max-width: $site-max-width;

	@include mq-min-max($screen, $largescreen) {
		//padding-left: $site-padding *.5; // padding on sides is smaller on mobile
		//padding-right: $site-padding *.5;
	}

	@include mq-max($mobile) {}
}

// section : large block with a wrapper inside (for background purpose)
.section {
	padding: $col-padding*2 0;
}

// row : to use in direct parent of floating elements
.row {}

// clearfix
.wrapper,
.row,
.section {
  @include pie-clearfix();
}

// mandatory class for each column div
.col {
	float: left;
	padding: $col-padding;

	// no margin for the last element inside column
	*:last-child
	{
		margin-bottom: 0;
	}

	@include mq-min-max($screen, $largescreen) {
		// padding: $col-padding/2; // less padding on cols
	}

	@include mq-max($mobile) {}
}

// columns sizes
.c1-1 { width: 100%; }
.c1-3 { width: 33.33333333%; }
.c2-3 { width: 66.66666666%; }
.c1-2 { width: 50%; }
.c1-4 { width: 25%; }
.c3-4 { width: 75%; }
.c1-5 { width: 20%; }
.c2-5 { width: 40%; }
.c3-5 { width: 60%; }
.c4-5 { width: 80%; }


// clears for multilines cols
.repeatable {
	.c1-2:nth-child(2n+1),
	.c1-3:nth-child(3n+1),
	.c1-4:nth-child(4n+1),
	.c1-5:nth-child(5n+1)
	{
		clear: both;
	}
}

// manually clear first block of a line
.first {
  clear: both;
}

// some common responsive measures
@include mq-max($mobile) {
	.c1-2,
	.c1-3, .c2-3,
	.c1-4, .c3-4,
	.c1-5, .c2-5, .c3-5, .c4-5
	{
		width: 100%;
		padding:0 0 $col-padding 0;
	}

	.no-mobile {
		display:none;
	}
}


//  =====================
//  = Responsive basics =
//  =====================

// fluid images
img {
	max-width: 100%;
	height: auto;
}

// Fix for Google Maps UI
.map,
#map {
	img {
		max-width: inherit;
	}
}

// fluid iframes
iframe {
	max-width: 100%;
}

// Box sizing : border box
div,
article,
a,
img,
input,
textarea
{
	@include box-sizing(border-box);
}