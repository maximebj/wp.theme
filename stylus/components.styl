a
button
input[type=submit]
[class^=button]
  transition all transition-speed ease-in-out


//  =========
//  = Forms =
//  =========

input[type=text]
input[type=email]
input[type=date]
input[type=number]
input[type=password]
textarea
  border border-thickness solid neutral
  font-size font-size
  width 100%
  margin 0

input[type=submit]
  cursor pointer
  font-size font-size
  
  &:hover
    background brand-color-hover


